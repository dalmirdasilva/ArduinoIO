void setup() {
  Serial.begin(9600);
  
  SimpleResourceSystem resourceSystem(RS_DRIVER_ARDUINO_EEPROM);
  External24cl256Eeprom eeprom(0x04);
  SimpleExternalEepromResourceIO io(&eeprom);
  SimpleResourceIO::associateIO(&io, RS_DRIVER_ARDUINO_EEPROM);

  Serial.print("Started at: ");
  Serial.println(millis());

  Serial.print("Monting... ");
  if (resourceSystem.mount(ResourceSystem::MOUNT_READ_WRITE)) {
    Serial.println("done.");
  } else {
    Serial.print("fail. Last operation result: ");
    Serial.println((int)resourceSystem.getLastOperationResult());
    return;
  }
  
  SimpleResource sr = resourceSystem.getResourceByCode(0);

  Serial.print("Resource code: ");
  Serial.println(sr.getCode());

  if (!sr.open(Resource::OPEN_READ_WRITE)) {
    Serial.print("Cannot open resource. Error: ");
    Serial.println((int)sr.getLastOperationResult());
    return;
  }

  Serial.print("Resource size before: ");
  Serial.println(sr.size());

  if (!sr.truncate()) {
    Serial.print("Cannot truncate resource. Error: ");
    Serial.println((int)sr.getLastOperationResult());
    return;
  }

  ResourceOutputStream ros(&sr);
  
  Serial.print("Font size: ");
  Serial.println(sizeof(font));
  
  Serial.print("Writing");
  for (unsigned int i = 0; i < sizeof(font); i++) {
    ros.write(font[i]);
    Serial.print(sr.getLastOperationResult());
  }
  Serial.println("done.");

  Serial.print("Resource size after: ");
  Serial.println(sr.size());

  ros.close();

  Serial.print("Umonting... ");
  if (resourceSystem.umount()) {
    Serial.println("done.");
  } else {
    Serial.print("fail. Last operation result: ");
    Serial.println((int)resourceSystem.getLastOperationResult());
    return;
  }

  Serial.print("Finished at: ");
  Serial.println(millis());
}

