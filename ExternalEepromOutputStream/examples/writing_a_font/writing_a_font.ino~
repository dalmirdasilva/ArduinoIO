void setup() {
  Serial.begin(9600);
  long i;
  
  External24cl256Eeprom ee(0x50);
  ExternalEepromOutputStream eeos(&ee);

  Serial.print("Started at: ");
  Serial.println(millis());

  for (i = 0; i < sizeof(font); i++) {
    eeos.write(font[i]);
  }
  eeos.close();

  Serial.print("Finished at: ");
  Serial.println(millis());
}

void loop() {
}

